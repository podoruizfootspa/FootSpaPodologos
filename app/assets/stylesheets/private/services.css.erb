.vcenter{
	display: inline-block;
	vertical-align: middle;
	float: none;
}

/*	Index Services header style	*/
.services-header{
	position: relative;
	background: linear-gradient(
		rgba(144, 198, 83, 0.5),
		rgba(144, 198, 83, 0.5)
		),
		url(<%= asset_path 'services_header.jpg' %>);
	background-size: cover;
	background-position: top center;
	background-attachment: fixed;
	background-repeat: no-repeat;
	transition: transform 0.5s, padding-right 0.5s ease;
	height: 50%;
	padding-top: 64px;
	text-align: center
}

.services-header .row{
	width: 100%;
	margin: 0;
}

.services-header .panel{
	border: 0px;
}

.services-header .panel .panel-heading{
	text-transform: uppercase;
	background-color: #424242;
	color: #fff;
}

.services-header .panel .panel-body{
	background-color: #fff;
}


/*	Page content style	*/
.content{
	padding-top: 2%;
	min-height: 50%;
	padding-bottom: 2%;
	background-color: #eceff1;
	text-align: center;
}

.content .row{
	width: 100%;
	margin: 0;
}


/*	Thumbnails style	*/
.content .thumbnail{
	text-decoration: none;
	background-color: #424242;
	padding: 0;
	height: 300px;
	transition: 0.3s;
}

.content .thumbnail .caption{
	color: #fff;
}

.content .thumbnail:hover,
.content .thumbnail:active{
	filter: drop-shadow(5px 5px 10px black);
	border-color: #424242;
}

.content .thumbnail .thumbnail-image{
	max-height: 229px;
}




